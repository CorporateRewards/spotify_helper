<div class="text-center">
  <h3>Search Results</h3>
</div>
<button id="close-search" class="btn btn-default pull-right">X</button>

  <table class="table">
    <th>Track name</th><th>Artist</th><th>Actions</th>
      <% @tracks.each do |track| %>
      <tr>
        <td><%= track.name %></td>
      <td><%= track.artists.map(&:name).join(', ') %></td>
      <td><%= link_to "add",add_a_track_track_path(uid: track.id, vote: 1, uri: track.uri, id: track.id, track_id: track.id),class:"btn btn-default track", method: :post, remote: true %></td>
      </tr>
    <% end %>
  </table>

  <button id="previous-results" class="btn btn-default pull-left">Previous 10 results</button>
  <button id="next-results" class="btn btn-default pull-right">Next 10 results</button>
