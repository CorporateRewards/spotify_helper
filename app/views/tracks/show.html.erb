<div class="">
  <div class="">
    <%= link_to "Generate playlist",update_playlist_path,class:"btn btn-default" %>
    <%= link_to "Play playlist",play_tracks_path,class:"btn btn-default" %>
    <%= link_to "Pause playlist",pause_tracks_path,class:"btn btn-default" %>
    <%= link_to "Next track",next_track_path,class:"btn btn-default" %>
    <%= link_to "Previous track",previous_track_path,class:"btn btn-default" %>

      <table class="table">
        <th>Song</th><th>Artist</th><th>Tune Ups</th><th>Pipe Downs</th><th>Vote</th><th>Actions</th>
        <% @playlist.each do |track| %>
        <tr>
          <td><%= track.name %></td>
          <td><%= track.artist %></td>
          <td><%= track.num_up_votes %></td>
          <td><%= track.num_down_votes %></td>              
          <td><%= link_to "Tune Up",new_tracks_votes_path(dbid: track.id, vote: 1),class:"btn btn-default vote-btn"  %>
              <%= link_to "Pipe Down",new_tracks_votes_path(dbid: track.id, vote: 0),class:"btn btn-default vote-btn"  %></td>
          <td><%= link_to "Remove",tracks_votes_path(dbid: track.id),class:"btn btn-default", method: :delete %>
              <%= link_to "Play this track",play_individual_track_path(track: track.uri),class:"btn btn-default" %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
</div>

