<% if !@currently_playing.nil? %>


<div id="player" class="col-sm-12 col-md-6">
  <h3 class="text-center">Currently Playing</h3>
  <div class="row currently-playing-vote">
    <%= link_to image_tag("thumbs-up.png", width: "30px"),
        place_vote_track_vote_path(
          uid: @currently_playing.id,
          vote: 1,
          uri: @currently_playing.uri,
          id: @currently_playing.id,
          track_id: @currently_playing.id
        ),
          class:"#{@votes.where(track_id: @track[0].id, vote: true).empty? ? 'active' : 'disabled'} btn btn-default home-page vote-btn",
          method: :put,
          remote: true
    %>
    <%= link_to image_tag("thumbs-down.png", width: "30px"),
        place_vote_track_vote_path(
          uid: @currently_playing.id,
          vote: 0,
          uri: @currently_playing.uri,
          id: @currently_playing.id,
          track_id: @currently_playing.id
        ),
          class:"#{@votes.where(track_id: @track[0].id, vote: false).empty? ? 'active' : 'disabled'} btn btn-default home-page vote-btn",
          method: :put,
          remote: true %>
  </div>

  <div id="currently-playing">

  <img id="albumimage" src="<%= @currently_playing.album.images[0]['url'] %>" style="width:75%" />
    <% if admin_signed_in? %>

      <div id="player-controls">
        <div class="row">
          <%= link_to image_tag("down.png", alt: "Volume down"),volume_control_path(change: -1),class:"text-center col-sm-2", remote: true %>
          <%= link_to image_tag("previous.png", alt: "Previous track"),navigate_track_path(direction: 'previous'),class:"text-center col-sm-2", remote: true  %>
          <%= link_to image_tag("play.png", alt: "Play playlist"),play_tracks_path,class:"text-center col-sm-2", remote: true  %>
          <%= link_to image_tag("pause.png", alt: "Pause playlist"),pause_tracks_path,class:"text-center col-sm-2", remote: true  %>
          <%= link_to image_tag("next.png", alt: "Next track"),navigate_track_path(direction: 'next'),class:"text-center col-sm-2", remote: true  %>
          <%= link_to image_tag("up.png", alt: "Volume up"),volume_control_path(change: 1),class:"text-center col-sm-2", remote: true %>
        </div>
      </div>
    <% end %>
  </div>


<div id="track-info" class="text-center">
  <h4>Artist(s)</h4>
  <div id="artistname">
    <% @currently_playing.artists.each do |artist| %>
    <p><%= artist.name %></p>
    <% end %>
  </div>
  <h4>Track name</h4>
  <p id="trackname"><%= @currently_playing.name %></p>
  <h4>Album name</h4>
  <p id="albumname"><%= @currently_playing.album.name %></p>
  <h4>Album release date</h4><p id="releasedate"><%= @currently_playing.album.release_date %></p>
</div>

<% else %>
  <h1>We can't find the currently playing track</h1>
  <p>Something's gone wrong and we can't find a currently playing track. Either the app isn't logged in to Spotify, or there isn't anything currently playing.</p>
<% end %>
</div>
